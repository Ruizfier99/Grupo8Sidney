<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    tools:context=".FragmentVista">

    <TextView
        android:id="@+id/tituloPoi"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="¡Zoo Taronga!"
        android:textColor="@color/black"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/DescripcionUbica"
        android:layout_width="471dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="El Zoo Taronga de Sydney es uno de los zoológicos más grandes de Australia, destacando por su compromiso con la conservación de la vida silvestre, por lo que alberga especies en peligro de extinción e imparte planes de educación ambiental."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenPoi"
        app:layout_constraintTop_toBottomOf="@+id/tituloPoi" />

    <ImageView
        android:id="@+id/imagenPoi"
        android:layout_width="221dp"
        android:layout_height="203dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloPoi"
        app:layout_constraintVertical_bias="0.283"
        app:srcCompat="@mipmap/jirafas" />

    <TextView
        android:id="@+id/nombreCat"
        android:layout_width="404dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenPoi"
        app:layout_constraintTop_toBottomOf="@+id/DescripcionUbica" />

    <TextView
        android:id="@+id/puntuacionUbi"
        android:layout_width="402dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenPoi"
        app:layout_constraintTop_toBottomOf="@+id/nombreCat" />

    <Button
        android:id="@+id/botonGoogle"
        android:layout_width="397dp"
        android:layout_height="81dp"
        android:text="@string/BottonMaps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenPoi"
        app:layout_constraintTop_toBottomOf="@+id/puntuacionUbi" />

</androidx.constraintlayout.widget.ConstraintLayout>